# Use LaTeX fonts
font.family: serif
font.serif: Computer Modern Roman
text.usetex: true

# Backend options (42: use TrueType fonts)
pdf.fonttype: 42
ps.fonttype: 42

# Set font sizes
font.size: 12
axes.labelsize: 12
axes.titlesize: 12
xtick.labelsize: 10
ytick.labelsize: 10
legend.fontsize: 12

# Set lines and ticks
lines.linewidth: 1.5
lines.markersize: 3.6

# Set legend properties
legend.markerscale: 1.0
legend.framealpha: 1.0
legend.handlelength: 1.5

